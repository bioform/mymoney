template(name="categoryList")
  .posts
    .post.row-fluid
      form.form-inline
        input.span4(name="title", type="text", placeholder="Title")
        button.btn.btn-success(type="submit")
          i.icon-ok.icon-white
          |  {{ t "button.add" }}

    {{#each categories}} 
      {{> categoryItem }}
    {{/each}} 
